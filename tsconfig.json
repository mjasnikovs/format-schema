{
  "compilerOptions": {
    "target": "ES2018",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
